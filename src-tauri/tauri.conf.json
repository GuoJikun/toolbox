{
  "productName": "vtools",
  "version": "0.1.0",
  "identifier": "dev.jikun.vtools",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "vtools",
        "width": 1000,
        "height": 600,
        "center": true
      },
      {
        "title": "search",
        "width": 800, 
        "maxHeight": 600,
        "minHeight": 100,
        "url": "/search",
        "label": "search",
        "visible": false,
        "skipTaskbar": false,
        "focus": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
