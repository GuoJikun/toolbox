{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "search"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-show",
    "window:allow-start-dragging",
    "window:allow-toggle-maximize",
    "window:allow-minimize",
    "window:allow-close",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "dialog:default",
    "fs:default",
    "fs:allow-home-read",
    "fs:allow-home-write",
    "fs:allow-exists",
    "fs:scope-home-recursive"
  ]
}